{
    "version": 2,
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/dist",
    "installCommand": "cd frontend && npm install --legacy-peer-deps",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/frontend/api/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/index.html"
        }
    ]
}