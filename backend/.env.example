# ============================================
# DJANGO CONFIGURATION
# ============================================
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,www.loxtr.com,loxtr.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_NAME=loxtr_db
DB_USER=loxtr_user
DB_PASSWORD=your_secure_database_password
DB_HOST=postgres
DB_PORT=5432

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# GEO-LOCATION CONFIGURATION
# ============================================
ENABLE_GEO_DETECTION=True
USE_CLOUDFLARE_GEO=True
GEOIP_DATABASE_PATH=/app/geoip/GeoLite2-Country.mmdb

# ============================================
# AWS S3 CONFIGURATION
# ============================================
USE_S3=True
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=loxtr-media
AWS_S3_REGION_NAME=eu-central-1
AWS_S3_CUSTOM_DOMAIN=cdn.loxtr.com

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DEFAULT_FROM_EMAIL=info@loxtr.com

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# OR AWS SES
AWS_SES_ACCESS_KEY_ID=your_ses_access_key
AWS_SES_SECRET_ACCESS_KEY=your_ses_secret_key

# ============================================
# SEO & ANALYTICS
# ============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
GOOGLE_SITE_VERIFICATION=your_verification_code
BING_SITE_VERIFICATION=your_bing_verification_code

# ============================================
# SITE CONFIGURATION
# ============================================
SITE_URL=https://www.loxtr.com
SITE_NAME=LOXTR

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_EXPORT_PROGRAM=True
ENABLE_WHATSAPP_BUTTON=True
ENABLE_DEALER_PORTAL=False
ENABLE_MULTI_CURRENCY=False
ENABLE_ANALYTICS=True

# ============================================
# WHATSAPP CONFIGURATION
# ============================================
WHATSAPP_BUSINESS_NUMBER=905XXXXXXXXX
WHATSAPP_BUSINESS_NAME=LOXTR

# ============================================
# RATE LIMITING
# ============================================
RATELIMIT_ENABLE=True
CONTACT_FORM_RATE_LIMIT=5/h
APPLICATION_FORM_RATE_LIMIT=3/h

# ============================================
# SECURITY (Production Only)
# ============================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_S3_BUCKET=loxtr-backups
BACKUP_RETENTION_DAYS=30
